                var day_sport = $(item).attr('name').split("_");
                var day = day_sport[0];
                var sport = day_sport[1];

                var obj = {'sport': sport, 'day': day, 'checked': $(item).is(":checked")};
                var jsonArray = JSON.stringify(obj);
                $.ajax({
                    type: "POST",
                    url: url,
                    data: jsonArray,
                    success: function(data){
                       alert(data.day);
