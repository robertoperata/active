{% trans_default_domain 'FOSUserBundle' %}
<div class="col-xs-12 col-md-4 col-md-offset-4">
    <div class="wrapper_fos_user">
    <h1>Registrazione</h1>
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register clearfix'}}) }}
    {{  form_errors(form) }}
    <div class="form-group">


    {{ form_label(form.username,  'Nome utente') }}

        {{ form_widget(form.username , {'attr': {'class': 'form-control'}} ) }}

    {{ form_errors(form.username) }}


</div>
<div class="form-group">
    {{ form_label(form.email,  'Email') }}

        {{ form_widget(form.email,  { 'attr': {'class': 'form-control'}}) }}

    {{ form_errors(form.email) }}
</div>
<div class="form-group">
    {{ form_label(form.plainPassword.first,  'Password') }}

    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'}}) }}

    {{ form_errors(form.plainPassword.first) }}
</div>
<div class="form-group">
    {{ form_label(form.plainPassword.second,  'Ripeti password') }}

    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'}}) }}

    {{ form_errors(form.plainPassword.second) }}
</div>



    <div style="margin-top: 40px">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary col-xs-12"/>
    </div>
{{ form_end(form) }}
</div>
</div>